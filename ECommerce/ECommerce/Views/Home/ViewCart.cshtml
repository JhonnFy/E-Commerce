@model List<CartItemVM>

@if (Model.Count != 0)
{
    <div class="row justify-content-between mt-4">

        <div class="col-4">
            <h4>Cart Items</h4>
        </div>

        <div class="col-4 text-end">
            <button class="btn btn-success">
                Order Now
            </button>
        </div>

    </div>

    <hr /> @* Línea separadora *@

    <table class="table custom-table">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">

                    <td style="width:120px">
                        <img class="card-img-top rounded" src="~/images/@item.ImageName" alt="Product image"
                             loading="lazy" style="width:100px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C2")</td>

                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C2"))</td>

                    <td style="width:120px">
                        <a href="/Home/RemoveItemToCart?productId=@item.ProductId" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <style>
        /* Fondo clarito por defecto en todas las celdas y texto blanco */
        .custom-table tbody tr td {
            background-color: #053345 !important; /* gris muy oscuro */
            color: white !important; /* texto blanco */
            position: relative; /* necesario para posicionar el icono */
            transition: background-color 0.2s;
        }

        /* Al pasar el cursor sobre toda la fila */
        .custom-table tbody tr:hover td {
            color: yellow !important; /* texto negro al pasar el cursor */
        }

        /* Icono de pluma oculto por defecto */
        .edit-icon {
            display: none; /* oculto hasta hover */
            position: absolute; /* lo ponemos dentro de la celda */
            right: 10px; /* margen desde la derecha */
            top: 50%; /* centrado vertical */
            transform: translateY(-50%); /* corrección de centrado vertical */
            font-size: 14px; /* tamaño del icono */
            color: yellow; /* color visible sobre el fondo */
        }

    </style>

}
else
{
    <div class="alert alert-warning mt-4" role="alert">
        There Are No Product In The Cart
    </div>
}


